<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingRight="15dp"
    android:paddingTop="8dp"
    android:paddingLeft="15dp">


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/shape_share_item_square"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvsharetype"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:gravity="center"
                            android:text="Music"
                            android:textColor="#FFEC4909"
                            android:textSize="30sp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvsharetitle"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:maxLines="2"
                                android:text="dasdasd asd as" />

                            <TextView
                                android:id="@+id/tvsharecontent"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:lines="1"
                                android:text="dasdasd asd as" />

                            <TextView
                                android:id="@+id/tvsharetime"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:gravity="right|center"
                                android:lines="1"
                                android:text="dasdasd asd as" />

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

</LinearLayout>